<% layout("layouts/boilerplate") -%>

    <body class="bg-black text-white">
        <h3 class="text-4xl my-3 font-medium text-center">All Listings</h3>
        <ul class="grid lg:grid-cols-4 md:grid-cols-3 sm:p-3 p-4 sm:grid-cols-2 grid-cols-1  gap-3">
            <% for(let item of allListings){ %>
                <li class="sm:w-11/12 w-4/5 mx-auto">
                    <a href="/listings/<%=item._id%>">
                        <div class="rounded-2xl flex flex-col overflow-hidden items-start">
                            <picture class="w-full h-64 rounded-2xl overflow-hidden">
                                <source src="<%=item.image.url  %>">
                                <img class="w-full h-full object-cover" src="<%=item.image.url  %>"
                                    alt="<%=item.description  %>">
                            </picture>
                            <h2 class="font-bold ">
                                <%= item.title %>
                            </h2>
                            <p> &#8377;<%=item.price.toLocaleString("en-IN") %>/night</p>
                        </div>
                    </a>
                </li>
                <% } %>
        </ul>
    </body>