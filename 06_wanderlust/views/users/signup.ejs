<%- layout("/layouts/boilerplate") %>

    <div class="flex h-[calc(100vh-72px)] w-full justify-center gap-5 flex-col items-center">
        <h2 class="text-4xl font-bold">SignUp on Wanderlust</h2>
        <form class="flex sm:w-3/5 md:w-1/2 w-4/5 mx-auto gap-1 flex-col  items-start" action="/signup" method="post">
            <label class="text-xl font-medium" for="username">Username</label>
            <input class="rounded-lg p-1 text-xl w-full border border-black" type="text" name="username" id="username"
                required>
            <label class="text-xl font-medium" for="email">Email</label>
            <input class="rounded-lg p-1 text-xl w-full border border-black" type="text" name="email" id="email"
                required>
            <label class="text-xl font-medium" for="passsword">password</label>
            <input class="rounded-lg p-1 text-xl w-full border border-black" type="text" name="password" id="password"
                required>
            <button class="rounded-lg py-2 mt-4  px-3  bg-green-500 text-white ">Signup</button>
        </form>
    </div>